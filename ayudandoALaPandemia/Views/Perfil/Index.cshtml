@model Repositorios.Usuarios

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NecesidadesLayout.cshtml";
}

<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3">
        Mi perfil
    </h1>
    <!-- /.row -->
    <!-- Contact Form -->
    <!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
    <div class="row">
        <div class="col-lg-8 mb-4">

            @using (Html.BeginForm("Modificar", "Perfil", FormMethod.Post))
            {
                
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Usuario:</label>
                            <input type="email" class="form-control" id="userName" value="@Session["userName"]" readonly>
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Email:</label> 
                            <input type="text" class="form-control" id="nombre" value="@Session["email"]" readonly>
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Nombre:</label>
                            <input type="text" class="form-control" id="nombre" value="@Session["nombre"]" readonly>
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Apellido:</label>
                            <input type="tel" class="form-control" id="apellido" value="@Session["apellido"]" readonly>
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Fecha de nacimiento:</label>
                            <input type="date" class="form-control" id="fechaDeNacimiento" value="@Session["fechaNacimiento"]" readonly>
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Foto:</label>
                            @if (@Session["foto"] == null)
                            {
                                <input type="file" name="file" id="file" value="" style="width: 100%;" />
                            }
                            else
                            {
                                <img src="../../Content/Template/img/@Session["foto"]" width="100%" height="auto" />
                            }
                        </div>
                    </div>
                
                    <div id="success"></div>
                    <!-- For success/fail messages -->
                    <button type="submit" class="btn btn-primary" id="sendMessageButton">Modificar</button>
                }
            </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
