
@{
    ViewBag.Title = "MisDonaciones";
    Layout = "~/Views/Shared/_NecesidadesLayout.cshtml";
}

<h2>MisDonaciones</h2>

<section id="main-content">
    <section class="container">

        <div class="row">
            @if (ViewBag.MisDonacionesInsumos != null)
            {

                foreach (var p in ViewBag.MisDonacionesInsumos)
                {
                    <div class="col-lg-4 mb-4">
                        
                            <h4 class="card-header">@p.NecesidadesDonacionesInsumos.Nombre</h4>
                            <div class="card-body">
                                <p class="card-text">@p.Cantidad</p> 
                            </div>
                            
                    </div>
                }
            }
        </div>
        <div class="row">
            @if (ViewBag.MisDonacionesMonetaria != null)
            {

                foreach (var p in ViewBag.MisDonacionesMonetaria)
                {
                    <div class="col-lg-4 mb-4">

                        <h4 class="card-header">@p.NecesidadesDonacionesMonetarias.Necesidades.Nombre</h4><!-- aca va el nombrede la necesidad monetaria -->
                        <div class="card-body">
                            <p class="card-text">@p.Dinero</p>
                        </div>

                    </div>
                }
            }
        </div>

    </section>
</section>