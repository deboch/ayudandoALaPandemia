
@model ayudandoALaPandemia.ViewModels.checkboxDto


@{
    ViewBag.Title = "MisNecesidades";
    Layout = "~/Views/Shared/_NecesidadesLayout.cshtml";
}

<h2>MisNecesidades</h2>

<section id="main-content">
    <section class="container">
        @using (Html.BeginForm("MisNecesidades", "Perfil", FormMethod.Get))
            
        {
            @Html.CheckBoxFor(m => m.activo, htmlAttributes: new { @checked = false })


            <div class="row">
                @if (ViewBag.Necesidades != null)
                {

                    foreach (var p in ViewBag.Necesidades)
                    {
                        <div class="col-lg-4 mb-4">
                            <a href="@(Session["email"] != null ? "/necesidad/@p.IdNecesidad/detalle" : "/login" )" class="card h-100">
                                <h4 class="card-header">@p.Nombre</h4>
                                <img src="../../Content/Template/img/@p.Foto" width="65" height="65" />
                                <div class="card-body">
                                    <p class="card-text">@p.Descripcion</p>
                                    <span class="badge">
                                        @(p.TipoDonacion == 1 ? "Monetaria" : "Insumos")
                                    </span>
                                </div>
                                @if (p.Valoracion != null)
                                {
                                    <div class="star-ratings-sprite">
                                        <span style="width:@p.Valoracion%" class="star-ratings-sprite-rating"></span>
                                    </div>
                                }
                            </a>
                        </div>
                    }
                }
            </div>
            <div class="row">
                @if (ViewBag.NecesidadesActivas != null)
                {

                    foreach (var p in ViewBag.NecesidadesActivas)
                    {
                        <div class="col-lg-4 mb-4">
                            <a href="@(Session["email"] != null ? "/necesidad/@p.IdNecesidad/detalle" : "/login" )" class="card h-100">
                                <h4 class="card-header">@p.Nombre</h4>
                                <img src="../../Content/Template/img/@p.Foto" width="65" height="65" />
                                <div class="card-body">
                                    <p class="card-text">@p.Descripcion</p>
                                    <span class="badge">
                                        @(p.TipoDonacion == 1 ? "Monetaria" : "Insumos")
                                    </span>
                                </div>
                                @if (p.Valoracion != null)
                                {
                                    <div class="star-ratings-sprite">
                                        <span style="width:@p.Valoracion%" class="star-ratings-sprite-rating"></span>
                                    </div>
                                }
                            </a>
                        </div>
                    }
                }
            </div>
        }
    </section>
</section>