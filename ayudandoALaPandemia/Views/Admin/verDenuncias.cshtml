@model Repositorios.Denuncias

@{
    ViewBag.Title = "Ver Denuncias";
    Layout = "~/Views/Shared/_NecesidadesLayout.cshtml";

   
}
@{
    var denuncias = ViewBag.Denuncias;
}

<h3 class="text-center">Denuncias</h3>

<br />
<br />
<div class="container-fluid">
    <table class="table text-center">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Fecha</th>
                <th scope="col">Motivo</th>
                <th scope="col">Link</th>
                <th scope="col">Comentarios</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Denuncias)
                {
            <tr>
                <td>@item.IdDenuncia</td>
                <td>@item.FechaCreacion</td>
                <td>@item.MotivoDenuncia.Descripcion</td>
                <td><a href="/necesidad/@item.IdNecesidad/detalle">ir al detalle</a></td>
                <td>@item.Comentarios</td>
                <td>
                    @using (Html.BeginForm("DesestimarDenuncia", "Admin", FormMethod.Post))
                        {
                    @Html.TextBoxFor(m => m.IdDenuncia, new { type = "hidden", @Value = @item.IdDenuncia, @class = "form-control" })
                    <button type="submit" class="btn btn-md btn-secondary">Desestimar</button>
                        }
                </td>
                <td>
                    @using (Html.BeginForm("AceptarDenuncia", "Admin", FormMethod.Post))
                        {
                    @Html.TextBoxFor(m => m.IdDenuncia, null, new { type = "hidden", @Value = @item.IdDenuncia, @class = "form-control" })
                    <button type="submit" class="btn btn-md btn-secondary">Aceptar</button>
                        }
                </td> 
            </tr>
             }
        </tbody>
    </table>
</div>
<br />
<br />