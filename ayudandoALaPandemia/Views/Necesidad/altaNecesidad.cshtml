
@{
    ViewBag.Title = "Nueva_Necesidad";
}



<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Crear Necesidad
            </header>
            <div class="panel-body">
                <div class="form">
                    <form class="form-validate form-horizontal" id="feedback_form" method="get" action="">
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Nombre <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control" id="cname" name="Nombre" minlength="5" type="text" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cemail" class="control-label col-lg-2">Descripción <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control " id="cemail" type="email" name="Descripcion" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="curl" class="control-label col-lg-2">Fecha de fin</label>
                            <div class="col-lg-10">
                                <input class="form-control " id="curl" type="date" name="FechaFin" />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Teléfono de contacto <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control" id="subject" name="TelefonoContacto" minlength="5" type="text" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label class="control-label col-lg-2" for="inputSuccess">Tipo de Donación</label>
                            <select class="form-control m-bot15">
                                <option>Monetaria</option>
                                <option>Insumos</option>
                            </select>
                        </div>
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Cantidad de dinero que necesita <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control" id="cname" name="CantDinero" minlength="5" type="text" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cemail" class="control-label col-lg-2">CBU/Alias <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control " id="cemail" type="email" name="CBUAlias" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputFile">Foto</label>
                            <input id="exampleInputFile" type="file" name="Foto">
                            <p class="help-block">Ej:Foto.jpg</p>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-primary" type="submit">Crear</button>
                                <button class="btn btn-default" type="button">Cancelar</button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <section class="panel">
                                    <header class="panel-heading">Referencia 1</header>
                                    <div class="panel-body">
                                        <div class="form-group ">
                                            <label for="cname" class="control-label col-lg-2">Nombre <span class="required">*</span></label>
                                            <div class="col-lg-10">
                                                <input class="form-control" id="" name="NombreContacto" minlength="5" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="cemail" class="control-label col-lg-2">Teléfono <span class="required">*</span></label>
                                            <div class="col-lg-10">
                                                <input class="form-control " id="" type="number" name="Telefonocontacto" required />
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </div>
                            <div class="col-lg-6">
                              <!-- completar con la demas referencias-->
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </section>
    </div>
</div>