
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<div class="row">
    <form action="@Url.Content("/Login") method="post">
        <div class="form-group">
            <label>Usuario</label>
            <input type="email" name="UserName" />
        </div>
        <div class="form-group">
            <label>Contraseña</label>
            <input type="password" name="Password" />
        </div>
        <div class="form-group">
            <input type="button" value="Entrar" class="btn btn-success"/>
        </div>

    </form>
</div>

