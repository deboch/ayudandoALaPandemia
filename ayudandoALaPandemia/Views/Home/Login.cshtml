<body class="login-img3-body">
    <div class="container">
        <form class="login-form" action="@Url.Content("/Login")" method="post">
            <div class="login-wrap">
                <p class="login-img"><i class="icon_lock_alt"></i></p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="icon_profile"></i></span>
                    <input type="email" class="form-control" placeholder="Usuario" autofocus>
                </div>
                <div class="input-group">
                    <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                    <input type="password" class="form-control" placeholder="Contraseña">
                </div>
                <label class="checkbox">
                    <input type="checkbox" value="remember-me"> Remember me
                    <span class="pull-right"> <a href="#"> Olvidaste la contraseña?</a></span>
                </label>
                <button class="btn btn-primary btn-lg btn-block" type="submit">Entrar</button>
                <button class="btn btn-info btn-lg btn-block" type="submit">Registrarme</button>
            </div>
        </form>
    </div>
</body>
